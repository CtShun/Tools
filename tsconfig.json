{
	"compilerOptions": {
		"watch": false,
		"sourceMap": false,
		"declaration": false,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"module": "commonjs",
		"newLine": "LF",
		"baseUrl": "./src",
		"outDir": "./out",
		"lib": [
			"es5",
			"dom",
			"es2015.promise"
		]
	},
	"exclude": [
		"node_modules",
		"out",
		"backup"
	]
}